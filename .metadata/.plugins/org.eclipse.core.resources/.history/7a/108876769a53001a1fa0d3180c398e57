//					if (color.equals("exit")) {
//						System.out.println("Please insert input(s) .05, .10, .25.");
//						System.out.println("Enter any negative number in order to proceed to the menu:");
//						break;
//					}
//					// Red gumball
//					if (color.equals("red")) {
