	public final static Coin QUARTER = new Coin(.25);
	public final static Coin DIME = new Coin(.10);
	public final static Coin NICKEL = new Coin(.05);
	
	private static double balance = 0.0;
	
	
	
	public GumballMachine() {
		super();
	}
	
	public double getBalance() {
		return balance;
	}
	
	public void insertCoin(double coin) {
		balance = balance + coin;
	}
	
	public String resetMachine() {
		balance = 0.0;
		return "Machine has been reset, please insert valid coins (Quarter, Dime, Nickel)";
	}
	
